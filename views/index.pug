extends layout

block content
  article.slds-card
    .slds-card__header.slds-grid
      header.slds-media.slds-media_center.slds-has-flexi-truncate
        .slds-media__figure
          span.slds-icon_container.slds-icon-standard-contact(title="contact")
            svg.slds-icon.slds-icon_small(aria-hidden="true")
              use(xlink:href="/icons/standard-sprite/svg/symbols.svg#contact")
            span.slds-assistive-text contact
        .slds-media__body
          h2.slds-card__header-title
            a.slds-card__header-link.slds-truncate(href="javascript:void(0);" title="Card Header")
              span= title
    .slds-card__body.slds-card__body_inner
      form.js-settings-form
        .slds-form-element
          label.slds-form-element__label(for="TimeZoneOptions") Type
          .slds-form-element__control
            .slds-select_container
              select#TimeZoneOptions.slds-select.js-activity-setting(name='timeZoneOptions')
                each timeZoneOption in timeZoneOptions
                  option(value=timeZoneOption)= timeZoneOption
              
          label.slds-form-element__label.slds-p-top_medium(for='BlackoutStartTime')
            abbr.slds-required(title='required')
            | Select Blackout Start Time *
          .slds-form-element__control
            input#BlackoutStartTime.slds-input.js-activity-setting(required='', placeholder='', name='text', type="time")

          label.slds-form-element__label.slds-p-top_medium(for='BlackoutFinishTime')
            abbr.slds-required(title='required')
            | Select Blackout Completed Time *
          .slds-form-element__control
            input#BlackoutFinishTime.slds-input.js-activity-setting(required='', placeholder='', name='text', type="time")

    footer.slds-card__footer